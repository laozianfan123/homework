.contain view text{
  font-size: 32rpx;
} 

.contain {
  background: #f2f2f2;
}

 .contain .goodsInfo{
  width: 100%;
} 

.goodsInfo,.sys{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contain .goodsInfo image{
  width:150rpx;
  height:150rpx;
  margin:0 50rpx;
}

.contain .goodsInfo .wrapper{
  flex: 1;
}

.contain .goodsInfo view view{
  height:88rpx;
  line-height:88rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
  padding: 0 20rpx; 
}

.contain button{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #1d8ffa;
  color: #fff; 
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
  width: 710rpx;
}
 
.sys image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.sys{
  background: #fafafa;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.sys view:nth-of-type(1){
  text-align: center;
  flex:1;
}

.sorted{
  display: flex;
  width:100%;
  padding:0 20rpx;
  height:80rpx;
  line-height:80rpx;
  box-sizing:border-box;
  font-size: 28rpx;
}

.sorted view:nth-of-type(1){
  flex:1;
}

.sorted view:nth-of-type(2){
  width:40%;
  color: #666;
}




